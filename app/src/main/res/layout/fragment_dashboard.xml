<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Temperature CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/temperatureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="4dp"
        android:onClick="onTemperatureCardClick">

        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Temperature: --"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Humidity CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/humidityCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="4dp"
        android:onClick="onHumidityCardClick">

        <TextView
            android:id="@+id/humidityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Humidity: --"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Moisture CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/MoistureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="4dp"
        android:onClick="onMoistureCardClick">

        <TextView
            android:id="@+id/moistureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Moisture: --"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Potentiometer CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/PotentiometerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="4dp"
        android:onClick="onPotentiometerCardClick">

        <TextView
            android:id="@+id/potentiometerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Potentiometer: --"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- LDR CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/LDRCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:onClick="onLdrCardClick">

        <TextView
            android:id="@+id/ldrText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="LDR: --"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
